<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.accounts.modules.domain.Module" table="modules">
        <composite-id name="id" class="ar.franciscoruiz.accounts.modules.domain.ModuleId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="endpoint" class="ar.franciscoruiz.accounts.modules.domain.ModuleEndpoint" access="field">
            <property name="value" column="endpoint" type="java.lang.String" access="field"/>
        </component>
    </class>
</hibernate-mapping>
